        </div>

        <div class="row">
            @foreach (var item in Model.boxes)
            {
                <div class="col-lg-4 col-sm-6">
                    <div class="price-card">
                        <div class="price-top">
                            <h3>@item.BoxName</h3>
                            <i class="bx bx-user"></i>
                            <h2>@item.Price <sub>تومان / @item.DatePermission روزه</sub></h2>
                            <h5>@item.CountPermisson  اگهی ها در این مدت</h5>
                        </div>

                        <div class="price-feature">
                            <ul>
                                @{

                                    char[] delimiterCharsEXP = { ',', '،' };
                                    string[] wordsEXP = item.BoxDescription.Split(delimiterCharsEXP);
                                    foreach (var items in wordsEXP)
                                    {
                                        <li>
                                            <i class="bx bx-check"></i>
                                            @items
                                        </li>
                                    }
                                }
                            </ul>
                        </div>

                        <div class="price-btn">
                            <a class="btn" onclick="Check(@item.BoxCategoryID)">خرید کنید</a>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</section>
