<!-- Contact Form Start --><section class="contact-form-section pb-100">
    <div class="container">
        <div class="contact-area">
            <h3>با ما تماس بگیرید</h3>
            <form id="contactForm">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text"  id="ContactUserName" class="form-control" required data-error="لطفا نام خود را وارد کنید" placeholder="نام شما">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="email" id="ContactEmail" class="form-control" required data-error="ایمیل خود را وارد کنید" placeholder="ایمیل شما">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" id="ContactPhone" class="form-control" required data-error="تلفن خود را وارد کنید" placeholder="تلفن شما">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" id="ContactSubject" class="form-control" required data-error="موضوع خود را وارد کنید" placeholder="موضوع شما">
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>

                    <div class="col-lg-12 col-md-12">
                        <div class="form-group">
                            <textarea  class="form-control message-field" id="ContactText" cols="30" rows="7" required data-error="پیام خود را بنویسید" placeholder="پیام شما"></textarea>
                            <div class="help-block with-errors"></div>
                        </div>
                    </div>

                    <div class="col-lg-12 col-md-12 text-center">
                        <button class="default-btn contact-btn" id="contact-btn">
                            ارسال پیام
                        </button>
                        <div id="msgSubmit" class="h3 alert-text text-center hidden"></div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
@section Scripts
{
    <script>
        $(function () {
            $(document).ready(function () {
                $(document).on("click", "#contact-btn", function (e) {
                  
                    $.ajax({
                        type: "POST",
                        url: "/ContactUs/SendComment",
                        data: JSON.stringify({
                            ContactUserName: $("#ContactUserName").val(),
                            ContactEmail: $("#ContactEmail").val(),
                            ContactPhone: $("#ContactPhone").val(),
                            ContactSubject: $("#ContactSubject").val(),
                            ContactText: $("#ContactText").val(),
                        }),
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        success: function (e) {
                            if (e.Status) {
                                alert('تغییرات ذخیره شد');
                            }
                            else {

                                alert('مجددا سعی کنید');
                            }
                        },
                        error: function () {
                            alert('خطا در ارتباط با سرور');
                        }
                    });
                });

            });
        });
    </script>
}
