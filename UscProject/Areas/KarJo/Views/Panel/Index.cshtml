@model UscProject.Models.UserTB
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/KarJo/Views/Shared/_KarJoLayout.cshtml";

    string path;
    if (Model.ImageName == true)
    {
        path = Url.Content("~/Files/UserPictures/Custom/KarJo/" + Model.PictureName);
    }
    else
    {
        path = Url.Content("~/Files/UserPictures/Default/UserProfile.jpg");
    }
}

<div class="row">
    <div class="col-lg-6 col-12 mb-30">
        <div class="box">
            <div class="box-head">
                <h4 class="title">من</h4>
            </div>
            <div class="box-body">

                <div class="avatar-wrap d-flex align-items-center flex-wrap mbn-10">

                    <div class="avatar avatar-xxl mr-10 mb-10">
                        <img src="@path" alt="">
                        <span class="status"></span>
                    </div>

                    <div class="row mbn-15">
                        <div class="col-12 mb-15"><input type="text" class="form-control" disabled placeholder="@Model.UserName"></div>
                        <div class="col-12 mb-15"><input type="text" class="form-control" disabled placeholder="@Model.Email"></div>
                        @if (ViewBag.resume == null)
                        {
                            <a href="@Url.Action("NewResume","Resume")" class="button button-info"><span>ساخت رزومه</span></a>
                        }
                        else
                        {

                            <a href="@Url.Action("EditResume","Resume")" class="button button-success"><span>ویرایش رزومه</span></a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xlg-6 col-md-6 col-12 mb-30">
        <div class="top-report">

            <!-- Head -->
            <div class="head">
                <h4>مجموع فرم های ارسالی</h4>
                <a href="#" class="view"><i class="zmdi zmdi-eye"></i></a>
            </div>

            <!-- Content -->
            <div class="content">
                <h2>@ViewBag.sentforms</h2>
            </div>

            <!-- Footer -->
            <div class="footer">
                <div class="progess">
                    <div class="progess-bar" style="width:@ViewBag.sentforms%;"></div>
                </div>
            </div>

        </div>
    </div>

</div>

